<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <variable
        name="viewmodel"
        type="com.monday8am.tweetmeck.user.UserViewModel" />

    <variable
        name="authViewModel"
        type="com.monday8am.tweetmeck.login.AuthViewModel" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".user.UserFragment">

<TextView
    android:id="@+id/logout_textView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@{viewmodel.user.screenName}"
    android:textAlignment="center"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.30" />

<Button
    android:id="@+id/logout_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/logout_from_twitter"
    android:onClick="@{() -> authViewModel.logout()}"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>