<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- primary palette -->
    <color name="colorPrimary">#008577</color>
    <color name="colorPrimaryDark">#00574B</color>
    <color name="colorAccent">#D81B60</color>

    <color name="white">#fff</color>
    <color name="grey_800">#424242</color>
    <color name="grey_600">#747474</color>
    <color name="spacer_grey">#e0e0e0</color>
    <color name="white_90">#e6ffffff</color>

    <!-- Android colors-->
    <color name="android_green">#3ddc84</color>
    <color name="android_green_acc">#1FA85D</color>
    <color name="android_green_dark">#258353</color>
    <color name="android_blue">#4285f4</color>
    <color name="android_navy">#073042</color>
    <color name="android_orange">#f86734</color>
    <color name="android_blue_light">#d7effe</color>
    <color name="android_blue_chartreuse">#eff7cf</color>

    <!-- ADS colors-->
    <color name="ads_gray">#9e9e9e</color>
    <color name="ads_light_green">#c3e3b4</color>
    <color name="ads_lighter_green">#94c27e</color>

    <color name="default_tag_color">#999</color>
    <color name="scrim">#33000000</color> <!-- 20% black -->

    <!-- Same value as textColorPrimary disabled -->
    <color name="color_control_light">#39000000</color>

    <!-- Used for detail/speaker header background and other generic placeholder backgrounds -->
    <color name="generic_placeholder_background">#10000000</color>

    <color name="color_primary">@color/android_blue</color>
    <color name="color_primary_dark">@color/android_navy</color>
    <color name="color_on_secondary">#fff</color>

    <color name="info_event_card_logo_background">@color/android_blue_light</color>

    <color name="transparent">#00000000</color>

    <!-- Scrim colors -->
    <color name="system_ui_scrim_light">#B3FFFFFF</color> <!-- 70% white -->
    <color name="system_ui_scrim_black">#66000000</color> <!-- 40% black -->

    <!-- We use a dark scrim by default since light status is API 23+ -->
    <color name="status_bar_scrim">@color/system_ui_scrim_black</color>
    <!-- We use a dark scrim by default since light nav bar is API 27+ -->
    <color name="nav_bar_scrim">@color/system_ui_scrim_black</color>

    <integer-array name="swipe_refresh">
        <item>@color/android_blue</item>
        <item>@color/android_orange</item>
        <item>@color/ads_gray</item>
        <item>@color/android_green</item>
        <item>@color/android_green_dark</item>
    </integer-array>

</resources>
