<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AlertDialog.Theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="fontFamily">@font/pt_sans</item>
        <item name="alertDialogStyle">@style/AlertDialog.Style</item>
        <item name="buttonBarStyle">@style/AlertDialog.ButtonBar</item>
        <item name="dialogPreferredPadding">@dimen/dialog_preferred_padding</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.TitleText</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/AlertDialog.TitlePanel</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.BodyText</item>
    </style>

    <style name="AlertDialog.Style" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/AlertDialog.ShapeAppearance</item>
    </style>

    <style name="AlertDialog.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/dialog_corner_radius</item>
    </style>

    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/pt_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent ="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
    </style>

    <style name="TextAppearance.Tweetmeck.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TextAppearance.Tweetmeck.SessionTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Tweetmeck.ListSecondary" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Tweetmeck.ReservationStatus" parent="@style/TextAppearance.Tweetmeck.ListSecondary">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Tweetmeck.Tag" parent="@style/TextAppearance.Tweetmeck.ListSecondary" />

    <style name="TextAppearance.Tweetmeck.AgendaTitle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Tweetmeck.SessionTitle.Display" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Tweetmeck.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Tweetmeck.BottomNav" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="fontFamily">@font/pt_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Tweetmeck.H1" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Tweetmeck.OnboardingDeck" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="TextAppearance.Tweetmeck.SpeakerTitle" parent="@style/TextAppearance.Tweetmeck.SessionTitle">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="TextAppearance.Tweetmeck.FadingSnackbarAction" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/android_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Tweetmeck" parent="@android:style/Widget" />

    <style name="Widget.Tweetmeck.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.Tweetmeck.BottomNav</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Tweetmeck.BottomNav</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.Tweetmeck.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Tweetmeck.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.Tweetmeck.ToolbarTitle</item>
    </style>

    <style name="Widget.Tweetmeck.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tweetmeck.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabUnboundedRipple">false</item>
    </style>

    <style name="Widget.Tweetmeck.Tag">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.Tweetmeck.Tag</item>
    </style>

    <style name="Widget.Tweetmeck.TimeHeaders">
        <item name="android:width">@dimen/session_keyline</item>
        <item name="android:paddingTop">@dimen/time_header_padding_top</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="hourTextSize">@dimen/time_header_hour_text_size</item>
        <item name="hourMinTextSize">@dimen/time_header_hour_min_text_size</item>
        <item name="meridiemTextSize">@dimen/time_header_meridiem_text_size</item>
    </style>

    <style name="Widget.Tweetmeck.DateHeaders">
        <item name="android:width">@dimen/session_keyline</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="dateTextSize">@dimen/time_header_hour_text_size</item>
        <item name="dayTextSize">@dimen/time_header_meridiem_text_size</item>
    </style>

    <style name="Widget.Tweetmeck.RaisedButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/raised_button_background</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.Tweetmeck.BorderlessButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">@dimen/padding_borderless_button</item>
        <item name="android:paddingBottom">@dimen/padding_borderless_button</item>
    </style>

    <style name="Widget.Tweetmeck.OnboardingDeck" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Tweetmeck.OnboardingDeck</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Tweetmeck.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/pt_sans_bold</item>
        <item name="android:textColor">@color/base01</item>
    </style>

    <style name="TextAppearance.Tweetmeck.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/pt_sans_bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Tweetmeck.Tweet.Date" parent="TextAppearance.Tweetmeck.Caption">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Tweetmeck.Body1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/base00</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/pt_serif</item>
    </style>

    <style name="TextAppearance.Tweetmeck.Body2" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/base01</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="Widget.Tweetmeck.SessionDetailTitle">
        <item name="android:gravity">start|bottom</item>
        <item name="android:textAppearance">@style/TextAppearance.Tweetmeck.SessionTitle.Display</item>
        <item name="android:breakStrategy" tools:targetApi="m">balanced</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">34sp</item>
    </style>

    <style name="TextAppearance.Tweetmeck.InfoEventTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="TextAppearance.Tweetmeck.InfoEventDescription" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TextAppearance.Tweetmeck.InfoEventDescription.AppCallout">
        <item name="android:textColor">?android:textColorLink</item>
    </style>

    <style name="TextAppearance.Tweetmeck.SettingsSwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
    </style>

    <style name="Widget.Tweetmeck.Settings" parent="android:Widget">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
    </style>

    <style name="TextAppearance.Tweetmeck.AboutButtons" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Tweetmeck.DialogTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.Tweetmeck.DialogContent" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Widget.Tweetmeck.TogglePinnedEventsSwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/btn_pinned_events_thumb</item>
    </style>

    <style name="Widget.Tweetmeck.AboutButtons" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Tweetmeck.AboutButtons</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>

    <!-- Misc -->
    <style name="Widget.Tweetmeck.EmptyResults">
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:drawableTop">@drawable/ic_sad</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
